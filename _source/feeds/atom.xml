---
title: ATOM
layout: atom
extension: .xml
---

<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>[% site.name %]</title>
  <link href="[% site.url %]"/>
  <link type="application/atom+xml" rel="self" href="[% site.url %]feeds/atom.xml" />
  <icon>[% site.url %]images/favicon.png</icon>
  <updated>[% site.time %]Z</updated>
  <id>[% site.url %]</id>
  <author>
    <name>Mark Benson</name>
    <email>mark@markbenson.io</email>
  </author>

  [% for post in site.categories.notabene %]
  <entry>
    <id>[% site.url %][% post.id %]</id>
    <link type="text/html" rel="alternate" href="[% post.url %]"/>
    <title>[% post.title %]</title>
    <published>[% post.date %]Z</published>
    <updated>[% post.date %]Z</updated>
    <author>
      <name>Mark Benson</name>
      <uri>[% site.url %]</uri>
    </author>
    <content type="html">[% post.content | xml_escape %]</content>
  </entry>
  [% end %]
 
</feed>

